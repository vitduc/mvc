<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="content">
            <container name="nsk.part_numbers_interchange.container" label="Nsk Part Numbers Interchange Container">
                <block class="Nsk\PartNumbersInterchange\Block\Form" name="nsk_part_number_interchange_index"
                       template="Nsk_PartNumbersInterchange::form.phtml"/>

                <container name="nsk.part_numbers_interchange.result"
                           label="Nsk Part Numbers Interchange Result Container">
                    <block class="Nsk\PartNumbersInterchange\Block\ResultList"
                           name="nsk_part_number_interchange_result_list"
                           template="Nsk_PartNumbersInterchange::result_list.phtml" cacheable="false">
                        <block class="Magento\Theme\Block\Html\Pager"
                               name="nsk_part_number_interchange_result_list_pager"/>
                    </block>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
